<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Standard ui with share button, visible after fullscreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdShowShareButtonAfterFullscreen
                    android:id="@+id/custom_videoplayer_standard_with_share_button"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Standard ui show title after fullscreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdShowTitleAfterFullscreen
                    android:id="@+id/custom_videoplayer_standard_show_title_after_fullscreen"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Standard ui show textureview after auto complete" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdShowTextureViewAfterAutoComplete
                    android:id="@+id/custom_videoplayer_standard_show_textureview_aoto_complete"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Standard ui auto complete after fullscreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdAutoCompleteAfterFullscreen
                    android:id="@+id/custom_videoplayer_standard_aoto_complete"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Standard ui 1:1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <cn.jzvd.demo.CustomJzvd.JzvdStdAutoCompleteAfterFullscreen
                    android:id="@+id/jz_videoplayer_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Standard ui 16:9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdAutoCompleteAfterFullscreen
                    android:id="@+id/jz_videoplayer_16_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Volume after fullscreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdVolumeAfterFullscreen
                    android:id="@+id/jz_videoplayer_volume"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Play Mp3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdMp3
                    android:id="@+id/jz_videoplayer_mp3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="18dp"
                android:text="Play Speed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <cn.jzvd.demo.CustomJzvd.JzvdStdSpeed
                    android:id="@+id/jz_videoplayer_speed"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>